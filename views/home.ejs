<%- include("partials/header"); -%>
<div class="main">
  <h1>Home</h1>
  <p><%= startingContent %></p>

  <% posts.forEach(function(post){ %>

  <h1 class="title"><%=post.title%></h1>
  <p class="body">
    <%= post.content.substring(0, 100) + " ..."%>
    <a class="link" href="/posts/<%=post._id%>">Read More</a>
  </p>
</div>

<% }) %> <%- include("partials/footer"); -%>
